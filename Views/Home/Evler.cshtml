@model TinyHouseRezervasyon.Models.HomeViewModel
@{
    ViewData["Title"] = "Evler";
}

<section class="houses-section">
    <div class="container">
        <div class="section-title">
            <h1>Tüm Evlerimiz</h1>
            <p>Size en uygun evi bulun</p>
        </div>

        <!-- Filtreler -->
        <div class="filters">
            <form id="filterForm" method="get" action="@Url.Action("Evler", "Home")">
                <div class="filter-group">
                    <label for="sehir">Konum</label>
                    <input type="text" id="sehir" name="sehir" class="form-control" value="@Model.Filtreler.Sehir" placeholder="Şehir ara...">
                </div>
                <div class="filter-group">
                    <label for="kisiSayisi">Kişi Sayısı</label>
                    <input type="number" id="kisiSayisi" name="kisiSayisi" class="form-control" value="@Model.Filtreler.KisiSayisi" min="1" placeholder="Kişi sayısı...">
                </div>
                <div class="filter-group">
                    <label for="girisTarihi">Giriş Tarihi</label>
                    <input type="date" id="girisTarihi" name="girisTarihi" class="form-control" value="@(Model.Filtreler.GirisTarihi?.ToString("yyyy-MM-dd"))">
                </div>
                <div class="filter-group">
                    <label for="cikisTarihi">Çıkış Tarihi</label>
                    <input type="date" id="cikisTarihi" name="cikisTarihi" class="form-control" value="@(Model.Filtreler.CikisTarihi?.ToString("yyyy-MM-dd"))">
                </div>
                <button type="submit" class="btn btn-primary">Filtrele</button>
            </form>
        </div>

        <!-- Ev Listesi -->
        <div id="evListesi">
            <partial name="_EvListesi" model="Model.Evler" />
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#filterForm').on('submit', function(e) {
                e.preventDefault();
                var formData = $(this).serialize();
                
                $.ajax({
                    url: '@Url.Action("Evler", "Home")',
                    type: 'GET',
                    data: formData,
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    success: function(response) {
                        $('#evListesi').html(response);
                    },
                    error: function(xhr, status, error) {
                        console.error('Hata:', error);
                        alert('Filtreleme sırasında bir hata oluştu: ' + error);
                    }
                });
            });
        });
    </script>
}

@section Styles {
    <style>
        .houses-section {
            padding: var(--spacing-xl) 0;
            background-color: var(--background-color);
        }

        .filters {
            display: flex;
            gap: var(--spacing-md);
            margin-bottom: var(--spacing-xl);
            flex-wrap: wrap;
            background: white;
            padding: var(--spacing-lg);
            border-radius: var(--border-radius-md);
            box-shadow: var(--shadow-sm);
        }

        .filter-group {
            flex: 1;
            min-width: 200px;
        }

        .filter-group label {
            display: block;
            margin-bottom: var(--spacing-xs);
            font-weight: 500;
            color: var(--text-color);
        }

        .filter-group select,
        .filter-group input {
            width: 100%;
            padding: var(--spacing-sm);
            border: 1px solid #ddd;
            border-radius: var(--border-radius-sm);
            font-size: var(--body-size);
        }

        .filter-group select:focus,
        .filter-group input:focus {
            outline: none;
            border-color: var(--primary-color);
        }

        .house-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: var(--spacing-lg);
        }

        .house-card {
            background: white;
            border-radius: var(--border-radius-md);
            overflow: hidden;
            box-shadow: var(--shadow-sm);
            transition: transform 0.3s ease;
        }

        .house-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-md);
        }

        .house-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .house-content {
            padding: var(--spacing-md);
        }

        .house-title {
            margin: 0 0 var(--spacing-sm);
            font-size: 1.25rem;
            font-weight: 600;
        }

        .house-location {
            color: var(--text-muted);
            margin-bottom: var(--spacing-sm);
        }

        .house-features {
            display: flex;
            gap: var(--spacing-md);
            margin-bottom: var(--spacing-md);
        }

        .feature {
            display: flex;
            align-items: center;
            gap: var(--spacing-xs);
            color: var(--text-muted);
        }

        .house-price {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--primary-color);
            margin-bottom: var(--spacing-md);
        }

        @@media (max-width: 768px) {
            .filters {
                flex-direction: column;
            }

            .filter-group {
                width: 100%;
            }

            .house-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
} 