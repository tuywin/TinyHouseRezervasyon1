        <div class="section-title">
            <h1>Tüm Evlerimiz</h1>
            <p>Size en uygun evi bulun</p>
        </div>

        <!-- Filtreler -->
        <div class="filters">
            <div class="filter-group">
                <label for="location">Konum</label>
                <select id="location" class="form-control">
                    <option value="">Tümü</option>
                    <option value="bolu">Bolu</option>
                    <option value="izmir">İzmir</option>
                    <option value="antalya">Antalya</option>
                    <option value="mugla">Muğla</option>
                    <option value="rize">Rize</option>
                    <option value="burdur">Burdur</option>
                </select>
            </div>
            <div class="filter-group">
                <label for="price">Fiyat Aralığı</label>
                <select id="price" class="form-control">
                    <option value="">Tümü</option>
                    <option value="0-1000">0 - 1.000 ₺</option>
                    <option value="1000-2000">1.000 - 2.000 ₺</option>
                    <option value="2000-3000">2.000 - 3.000 ₺</option>
                    <option value="3000+">3.000 ₺ ve üzeri</option>
                </select>
            </div>
            <div class="filter-group">
                <label for="guests">Misafir Sayısı</label>
                <select id="guests" class="form-control">
                    <option value="">Tümü</option>
                    <option value="1-2">1-2 Kişi</option>
                    <option value="3-4">3-4 Kişi</option>
                    <option value="5-6">5-6 Kişi</option>
                    <option value="7+">7+ Kişi</option>
                </select>
            </div>
            <button class="btn btn-primary" onclick="applyFilters()">Filtrele</button>
        </div>

