@model TinyHouseRezervasyon.Models.Ev
@{
    ViewData["Title"] = "Yeni Ev Ekle";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header">
                    <h3 class="card-title">Yeni Ev Ekle</h3>
                </div>
                <div class="card-body">
                    <form id="evEkleForm" asp-action="Ekle" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="Baslik" class="form-label">Başlık</label>
                            <input asp-for="Baslik" class="form-control" required />
                            <span asp-validation-for="Baslik" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Aciklama" class="form-label">Açıklama</label>
                            <textarea asp-for="Aciklama" class="form-control" rows="4" required></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Sehir" class="form-label">Şehir</label>
                                    <input asp-for="Sehir" class="form-control" required />
                                    <span asp-validation-for="Sehir" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Adres" class="form-label">Adres</label>
                                    <input asp-for="Adres" class="form-control" required />
                                    <span asp-validation-for="Adres" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Fiyat" class="form-label">Fiyat (TL)</label>
                                    <input asp-for="Fiyat" class="form-control" type="number" step="0.01" required />
                                    <span asp-validation-for="Fiyat" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="KisiSayisi" class="form-label">Kapasite (Kişi)</label>
                                    <input asp-for="KisiSayisi" class="form-control" type="number" required />
                                    <span asp-validation-for="KisiSayisi" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="YatakSayisi" class="form-label">Yatak Sayısı</label>
                                    <input asp-for="YatakSayisi" class="form-control" type="number" required />
                                    <span asp-validation-for="YatakSayisi" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="BanyoSayisi" class="form-label">Banyo Sayısı</label>
                                    <input asp-for="BanyoSayisi" class="form-control" type="number" required />
                                    <span asp-validation-for="BanyoSayisi" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Ozellikler" class="form-label">Özellikler</label>
                            <textarea asp-for="Ozellikler" class="form-control" rows="3" placeholder="Her özelliği yeni satıra yazın"></textarea>
                            <span asp-validation-for="Ozellikler" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Ev Fotoğrafları</label>
                            <input type="file" name="fotograflar" class="form-control" multiple accept="image/*" />
                            <small class="text-muted">Birden fazla fotoğraf seçebilirsiniz. Her fotoğraf en fazla 5MB olmalıdır.</small>
                        </div>

                        <div class="text-end">
                            <a href="/Evler" class="btn btn-secondary">İptal</a>
                            <button type="submit" class="btn btn-primary">Ev Ekle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#evEkleForm').on('submit', function(e) {
                e.preventDefault();
                
                var formData = new FormData(this);
                
                $.ajax({
                    url: $(this).attr('action'),
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(response) {
                        if (response.success) {
                            toastr.success(response.message);
                            setTimeout(function() {
                                window.location.href = '/Evler';
                            }, 1000);
                        } else {
                            toastr.error(response.message);
                        }
                    },
                    error: function() {
                        toastr.error('Bir hata oluştu. Lütfen daha sonra tekrar deneyin.');
                    }
                });
            });
        });
    </script>
} 