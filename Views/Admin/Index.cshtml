@model TinyHouseRezervasyon.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Paneli";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Admin Paneli</h1>

    <div class="row">
        <!-- Toplam Ev Sayısı -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Toplam Ev Sayısı</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ToplamEvSayisi</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-home fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Toplam Rezervasyon -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Toplam Rezervasyon Sayısı</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ToplamRezervasyonSayisi</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Toplam Kullanıcı -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Toplam Kullanıcı Sayısı</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ToplamKullaniciSayisi</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Son Rezervasyonlar -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Son Rezervasyonlar</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Ev</th>
                                    <th>Kullanıcı</th>
                                    <th>Giriş Tarihi</th>
                                    <th>Çıkış Tarihi</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var rezervasyon in Model.SonRezervasyonlar)
                                {
                                    <tr>
                                        <td>@rezervasyon.Ev.Baslik</td>
                                        <td>@rezervasyon.Kullanici.FullName</td>
                                        <td>@rezervasyon.GirisTarihi.ToShortDateString()</td>
                                        <td>@rezervasyon.CikisTarihi.ToShortDateString()</td>
                                        <td>
                                            <span class="badge @(rezervasyon.Durum switch {
                                                RezervasyonDurumu.Beklemede => "badge-warning",
                                                RezervasyonDurumu.Onaylandi => "badge-success",
                                                RezervasyonDurumu.IptalEdildi => "badge-danger",
                                                RezervasyonDurumu.Tamamlandi => "badge-info",
                                                _ => "badge-secondary"
                                            })">
                                                @rezervasyon.Durum
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Burada gerekli JavaScript kodları eklenebilir
    </script>
} 